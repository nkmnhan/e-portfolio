{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "description": "Get up-to-date documentation for Next.js, Tailwind CSS, Flowbite-React"
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@anthropics/mcp-sequential-thinking"],
      "description": "For complex problem-solving and multi-step reasoning"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "YOUR_GITHUB_TOKEN_HERE"
      },
      "description": "GitHub operations - issues, PRs, repos"
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"],
      "description": "Next.js DevTools - routing, components, build analysis"
    }
  },
  "contextManagement": {
    "maxFileLines": 500,
    "maxFilesToRead": 10,
    "preferSummary": true,
    "excludePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/.next/**",
      "**/coverage/**",
      "**/*.min.js",
      "**/*.map"
    ]
  },
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(node:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(pwd)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(touch:*)",
      "Bash(grep:*)",
      "Bash(diff:*)",
      "Bash(dir:*)",
      "Bash(npm run:*)",
      "Bash(pnpm run:*)",
      "Edit",
      "Write",
      "Read",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Skill",
      "ExitPlanMode"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(npm publish:*)"
    ],
    "deny": [
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~/*)",
      "Bash(rm -rf .)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)",
      "Edit(**/.env*)",
      "Edit(**/node_modules/**)",
      "Read(**/.env*)",
      "Read(**/secrets/**)",
      "Write(**/.env*)",
      "Write(**/node_modules/**)"
    ]
  }
}
